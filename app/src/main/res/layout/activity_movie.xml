<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Añadir a favoritas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/add_del_favorites_movie"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:onClick="addDelLikeClicked"
    />
    <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp" app:srcCompat="@mipmap/ic_launcher_round" android:id="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"/>
    <TextView
            android:text="Titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title_movie" android:layout_marginTop="16dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" android:textStyle="bold"/>
    <TextView
            android:text="Duracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/duration_movie" android:layout_marginTop="6dp"
            android:layout_below="@+id/title_movie"
            android:layout_centerHorizontal="true"
    />
    <TextView
            android:text="Año"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/year_movie" android:layout_marginTop="5dp"
            android:layout_below="@+id/duration_movie"
            android:layout_centerHorizontal="true"
    />
    <TextView
            android:text="Genero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/genre_movie" android:layout_marginTop="6dp"
            android:layout_below="@+id/year_movie"
            android:layout_centerHorizontal="true"
    />
    <TextView
            android:text="cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cast_movie" android:layout_marginTop="9dp"
            android:layout_below="@+id/genre_movie"
            android:layout_centerHorizontal="true"
    />
    <TextView
            android:text="synopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/synopsis_movie" android:layout_marginTop="5dp"
            android:layout_below="@+id/cast_movie"
            android:layout_centerHorizontal="true"
    />
</RelativeLayout>