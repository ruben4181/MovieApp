<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="120dp">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp" app:srcCompat="@mipmap/ic_launcher_round" android:id="@+id/image_movie_row"
            android:layout_alignParentStart="true" android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
            android:layout_alignParentLeft="true" android:layout_marginTop="9dp" android:layout_alignParentTop="true"/>
    <TextView
            android:text="Titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title_movie_row"
            android:layout_toEndOf="@+id/image_movie_row"
            android:layout_toRightOf="@+id/image_movie_row" android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp" android:layout_marginTop="10dp" android:layout_alignParentTop="true"
            android:textStyle="bold"/>
    <TextView
            android:text="Duracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/duration_movie_row"
            android:layout_toEndOf="@+id/image_movie_row" android:layout_toRightOf="@+id/image_movie_row"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp" android:layout_marginTop="10dp"
            android:layout_below="@+id/title_movie_row"/>
    <TextView
            android:text="AÃ±o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/year_movie_row"
            android:layout_toEndOf="@+id/image_movie_row" android:layout_toRightOf="@+id/image_movie_row"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp" android:layout_marginTop="10dp"
            android:layout_below="@+id/duration_movie_row"/>
    <TextView
            android:text="Genero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/genre_movie_row" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="11dp" android:layout_marginEnd="11dp"
            android:layout_marginTop="10dp" android:layout_alignParentTop="true" android:textStyle="bold"/>
</RelativeLayout>